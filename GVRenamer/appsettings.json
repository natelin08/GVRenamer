{
  "GeneralSetting": {
    //成功輸出的目錄
    "SuccessOutputFolder": "output",
    //失敗輸出的目錄
    "FailedOutputFolder": "failed",
    //失敗是否搬移檔案 true:搬移,false:不搬移
    "FailedMove": true,
    //要搜尋的檔案影片格式
    "FileExtensions": ".mp4,.avi,.rmvb,.wmv,.mov,.mkv,.flv,.ts,.webm,.iso,.mpg,.m4v",
    //是否搜尋子目錄
    "SearchSubFolder": false,
    //搜尋子目錄排除資料夾名稱
    "EscapeFolder": "failed,output" 
  },
  "NameRuleSetting": {
    //目錄命名規則，不建立子目錄請留空
    "FolderRule": "/%studio%/%number% - %title%",
    //檔案命名規則
    "NamingRule": "%number% [%studio%] %title%",
    //影片標題最大長度
    "MaxTitleLength": 50,
    //超過最大長度顯示的字串
    "MaxTitleOmitStr": "(...)"
  }
}